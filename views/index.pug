extends layout

block content
  .wrapper
      .cover
          img.loader(src='https://apps.nea.gov/GrantSearch/images/ajaxSpinner.gif')
      .register-background
          .filter-black
              .container
                  .row
                      .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
                          .register-card
                              form.register-form
                                  label Email
                                  input.form-control(type='text', placeholder='Email' id='email')

                                  label Password
                                  input.form-control(type='password', placeholder='Password' id='password')

                                  button.btn.btn-danger.btn-block(id='submit') Login

                              .forgot
                                  a.btn.btn-simple.btn-danger Forgot Password?